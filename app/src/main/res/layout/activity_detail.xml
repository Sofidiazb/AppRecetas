<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tv_nombre_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Nombre"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_plato_detail"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/iv_plato_detail"
        app:layout_constraintTop_toBottomOf="@+id/iv_plato_detail" />

    <ImageView
        android:id="@+id/iv_plato_detail"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_ingredientes_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Ingredientes"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre_detail"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>